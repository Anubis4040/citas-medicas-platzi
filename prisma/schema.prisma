generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role
  appointments Appointment[]
  createdAt DateTime @default(now())

  @@map("users")
}

enum Role {
  USER
  ADMIN
}

model Appointment {
  id        String   @id @default(cuid())
  date      DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  timeBlock TimeBlock @relation(fields: [timeBlockId], references: [id])
  timeBlockId String
  createdAt DateTime @default(now())
  @@map("appointments")
}

model TimeBlock {
  id        String   @id @default(cuid())
  startTime DateTime
  endTime   DateTime
  appointments Appointment[]
  createdAt DateTime @default(now())
  @@map("time_blocks")
}



